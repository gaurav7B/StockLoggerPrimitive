@model IEnumerable<StockLogger.Models.Candel.StockTickerExchange>

@{
    ViewData["Title"] = "Ticker List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color:white">@ViewData["Title"]</h1>

        <div class="list-group">
            @foreach (var ticker in Model)
            {
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@ticker.Ticker</h5>
                        <p class="mb-1 text-muted">@ticker.Exchange</p>
                        <span class="badge bg-primary rounded-pill">EDIT</span>
                        <span class="badge bg-primary rounded-pill">DELETE</span>
                    </div>
                </a>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
