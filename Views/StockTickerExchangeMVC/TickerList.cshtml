@model IEnumerable<StockLogger.Models.Candel.StockTickerExchange>

@{
    ViewData["Title"] = "Ticker List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .table-container {
            display: flex;
            justify-content: center;
        }

        .table {
            width: 80%;
            margin: 0 auto;
            margin-left: 10%;
        }

            .table thead th {
                background-color: black;
                color: white;
                text-align: center;
            }

            .table tbody td {
                background-color: #f5f5dc;
                color: black;
                text-align: center;
            }

        .actions-column {
            width: 150px;
            white-space: nowrap;
        }

        #downloadBtn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: green;
            color: white;
            font-size: 24px;
            display: flex;
            justify-content: center;
            align-items: center;
            border: none;
            cursor: pointer;
        }

            #downloadBtn:hover {
                background-color: darkgreen;
            }

        /* Updated Search Bar Styles */
        .search-bar {
            width: 80%;
            margin: 20px auto;
            display: flex;
            justify-content: center;
            position: relative;
        }

            .search-bar input {
                width: 100%;
                padding: 15px;
                font-size: 18px;
                border: 2px solid black;
                border-radius: 25px;
                transition: all 0.3s ease;
                outline: none;
            }

                .search-bar input:focus {
                    border-color: #007BFF;
                    box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
                }

            .search-bar input:focus + i {
                color: #007BFF;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color:white; text-transform: uppercase;">@ViewData["Title"]</h1>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search Ticker" aria-label="Search">
        </div>

        <div class="table-container">
            <table id="tickerTable" class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th scope="col">TICKER</th>
                        <th scope="col">EXCHANGE</th>
                        <th scope="col" class="actions-column">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticker in Model)
                    {
                        <tr>
                            <td>@ticker.Ticker</td>
                            <td>@ticker.Exchange</td>
                            <td class="actions-column">
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="downloadBtn" class="mb-4">
                <i class="fas fa-download"></i>
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.27/jspdf.plugin.autotable.min.js"></script>
    <script>
        const { jsPDF } = window.jspdf;

        document.getElementById('downloadBtn').addEventListener('click', function () {
            const doc = new jsPDF();
            const table = document.getElementById('tickerTable');

            doc.autoTable({
                html: table,
                styles: {
                    head: {
                        fillColor: [0, 0, 0],
                        textColor: [255, 255, 255],
                        halign: 'center'
                    },
                    body: {
                        fillColor: [245, 245, 220],
                        textColor: [0, 0, 0],
                        halign: 'center'
                    }
                }
            });

            doc.save('ticker_list.pdf');
        });

        // Search Functionality (only filter by Ticker)
        document.getElementById('searchInput').addEventListener('input', function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#tickerTable tbody tr');

            rows.forEach(row => {
                const ticker = row.cells[0].textContent.toLowerCase();

                if (ticker.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
