@* This is the partial view for the sidebar *@
@* It includes the sidebar and the toggle button *@

<!DOCTYPE html>
<html>
<head>
    <style>

        .sidebar {
            width: 50px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            box-sizing: border-box;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: width 0.3s ease;
        }

            .sidebar.expanded {
                width: 250px;
            }

            .sidebar h2 {
                margin-top: 0;
                text-align: center;
                font-size: 18px;
                transition: opacity 0.3s ease;
                opacity: 0;
            }

            .sidebar.expanded h2 {
                opacity: 1;
            }

            .sidebar.collapsed h2 {
                display: none;
            }

        .content {
            opacity: 0;
            height: 0;
            overflow: hidden;
            transition: opacity 0.5s ease, height 0.5s ease;
        }

            .content.visible {
                opacity: 1;
                height: auto;
            }


        .toggle-btn {
            position: absolute;
            top: 20px;
            left: 100%;
            margin-left: 10px;
            background-color: transparent;
            border: none;
            padding: 0;
            width: 30px;
            height: 30px;
            cursor: pointer;
            border-radius: 5px;
            background-image: url('@Url.Content("~/Images/Imperium.jpg")');
            background-size: cover;
            background-position: center;
        }

            .toggle-btn:focus {
                outline: none;
            }


        .content-area {
            margin-left: 50px;
            padding: 20px;
            flex-grow: 1;
            transition: margin-left 0.3s ease;
        }

            .content-area.sidebar-expanded {
                margin-left: 250px;
            }

        .icon {
            position: absolute;
            left: 0;
        }

        .topSidebarMenuediv {
            padding-top: 20%;
            cursor: default;
            position: relative;
        }

        .sidebarMenuediv {
            padding-top: 10%;
            cursor: default;
            position: relative;
        }

        .sidebarTop {
            border-bottom: 2px solid white;
            cursor: default;
        }

    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>

    <div class="sidebar collapsed">
        <button class="toggle-btn" onclick="toggleSidebar()"></button>

        <div class="sidebar-content">
            <div class="content">
                <div class="sidebarTop">
                    <h2>IMPERIUM</h2>
                </div>
                <div class="topSidebarMenuediv">
                    <i class="fas fa-home icon"></i>
                    <h2>HOME</h2>
                </div>
                <div class="sidebarMenuediv">
                    <i class="fas fa-chart-bar icon"></i>
                    <h2>3WS REPORT</h2>
                </div>
                <div class="sidebarMenuediv" onclick="redirectToTAddTicker()">
                    <i class="fas fa-plus icon"></i>
                    <h2>ADD TICKER</h2>
                </div>
                <div class="sidebarMenuediv" onclick="redirectToTickerList()">
                    <i class="fas fa-bars icon"></i>
                    <h2><a href="/StockTickerExchangeMVC/TickerList">TICKER LIST</a></h2>
                </div>
                <div class="sidebarMenuediv">
                    <i class="fas fa-download icon"></i>
                    <h2>DOWNLOAD</h2>
                </div>
            </div>
        </div>
    </div>

    <script>

        function toggleSidebar() {
            var sidebar = document.querySelector('.sidebar');
            var content = document.querySelector('.content');

            sidebar.classList.toggle('expanded');
            sidebar.classList.toggle('collapsed');

            if (sidebar.classList.contains('expanded')) {
                setTimeout(function() {
                    content.classList.add('visible');
                }, 300);
            } else {
                content.classList.remove('visible');
            }
        }

        function redirectToTickerList() {
            window.location.href = '/StockTickerExchangeMVC/TickerList';
        }

        function redirectToTAddTicker() {
            window.location.href = '/StockTickerExchangeMVC/AddTicker';
        }
    </script>

</body>
</html>
