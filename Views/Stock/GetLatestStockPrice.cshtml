@model StockLogger.Models.DTO.StockDataDto

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('@Url.Content("~/Images/Imperium.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
            font-family: Arial, sans-serif;
        }

        .stock-info {
            padding: 20px;
            text-align: center;
            background: rgba(0, 0, 0, 0.6);
            border-radius: 10px;
            width: 50%;
            margin: 50px auto;
        }

        .signature {
            position: absolute;
            bottom: 20px;
            right: 20px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 18px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            letter-spacing: 1px;
            text-transform: uppercase;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <div class="stock-info">
    </div>
    <div class="signature">
        SHALINI BALGUDE
    </div>
</body>
</html>
