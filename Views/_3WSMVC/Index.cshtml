<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            padding: 20px;
            width: 100vw;
            box-sizing: border-box;
        }

        .box {
            background-color: #4CAF50;
            height: 70px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 10px;
            box-sizing: border-box;
            color: white;
            font-family: Arial, sans-serif;
            font-size: 14px;
            border-radius: 4px;
        }

        .box-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .red-box {
            background-color: red;
            width: 15px;
            height: 15px;
            margin-left: 10px;
            border-radius: 3px;
            opacity: 1;
            transition: opacity 0.5s ease-in-out;
        }

        .company-name {
            font-weight: bold;
            margin-bottom: 5px;
            text-transform: uppercase;
        }

    </style>
</head>
<body>
    <div class="container">
        @for (int i = 1; i <= 50; i++)
        {
            <div class="box">
                <div class="company-name">Company Name</div>
                <div class="box-content">
                    <span>3WS Detected here</span>
                    <div class="red-box" id="red-box-@i"></div>
                </div>
            </div>
        }
    </div>

    <script>
        async function fetchStockData() {
            try {
                const response = await fetch('https://localhost:44364/api/StockTickerExchange/GetStockTickerExchanges');
                if (!response.ok) {
                    throw new Error('Failed to fetch data from API');
                }
                const data = await response.json();
                console.log('Fetched Data:', data);

                // You can store the data in a variable for later use
                const stockDataArray = data;
            } catch (error) {
                console.error('Error fetching stock data:', error);
            }
        }

        // Function to toggle the visibility of the red box
        function toggleBlinkingEffect() {
            const redBoxes = document.querySelectorAll('.red-box');
            redBoxes.forEach((box) => {
                setInterval(() => {
                    box.style.opacity = box.style.opacity == '1' ? '0' : '1';
                }, 250); // Toggles every 500ms
            });
        }

        // Run functions on page load
        document.addEventListener('DOMContentLoaded', () => {
            fetchStockData(); // Fetch stock data
            toggleBlinkingEffect(); // Start blinking effect
        });
    </script>
</body>
</html>
